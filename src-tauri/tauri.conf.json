{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Claude Usage Dashboard",
  "version": "1.2.0",
  "identifier": "com.claudeusagedashboard.desktop",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist-placeholder"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Claude Usage Dashboard",
        "width": 1400,
        "height": 900,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "url": "http://localhost:3000"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all",
    "resources": {
      "../bundle/server/**/*": "server/",
      "../bundle/runtime/*": "runtime/"
    },
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}

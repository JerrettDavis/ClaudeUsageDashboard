{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Claude Usage Dashboard",
  "version": "2.0.0",
  "identifier": "com.claudeusagedashboard.app",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../out"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Claude Usage Dashboard",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "url": "http://localhost:3000"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all",
    "resources": {
      "../.next/standalone/**/*": "server/"
    },
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true,
      "sidecar": [
        {
          "path": "server/server",
          "args": [],
          "windows": {
            "cmd": ["node", "server.js"]
          }
        }
      ]
    }
  }
}
